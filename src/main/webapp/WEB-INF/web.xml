<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>Project</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  
  <servlet>
    <servlet-name>PlaceOrderServlet</servlet-name>
    <servlet-class>com.tap.controller.PlaceOrderServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>PlaceOrderServlet</servlet-name>
    <url-pattern>/placeOrder</url-pattern>
</servlet-mapping>

  <servlet>
    <servlet-name>OrderHistory</servlet-name>
    <servlet-class>com.tap.controller.OrderHistory</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>OrderHistory</servlet-name>
    <url-pattern>/orderHistory</url-pattern>
</servlet-mapping>
  
  <session-config>
    <session-timeout>30</session-timeout> <!-- Time in minutes -->
</session-config>
  
  
</web-app>